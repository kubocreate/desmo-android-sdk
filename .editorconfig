root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
# ktlint specific rules
ktlint_standard_no-wildcard-imports = disabled
ktlint_standard_package-name = disabled
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
